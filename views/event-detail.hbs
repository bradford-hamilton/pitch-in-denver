<div class="col s12 m12">
    <div class="row">
        <div class="col s12 m6 offset-m3">
            <div class="card large">
                <div class="card-image">
                    <img src="https://dncache-mauganscorp.netdna-ssl.com/thumbseg/630/630099-bigthumbnail.jpg">
                    <span class="card-title">{{event.title}}</span>
                </div>
                <div class="card-content">
                    <p>
                        <b>Location:</b> {{event.address}}
                        <br>
                        <b>Location Details:</b> {{event.details}}
                    </p>
                    <p>
                        <b>Date:</b> {{event.id}} {{event.date}}
                        <br>
                        <b>Start Time:</b> {{event.start_time}}
                        <br>
                        <b>End Time:</b> {{event.end_time}}
                    </p>
                    <p>
                        <b>Description:</b> {{event.description}}
                    </p>
                    <p>
                        <b>Volunteers:</b>
                        {{#each volunteers}}
                            <li>{{this.first_name}} {{this.last_name}}</li>
                        {{/each}}
                    </p>
                    <p>
                      <a href="/events/{{event.id}}/volunteer">Volunteer for this event</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
